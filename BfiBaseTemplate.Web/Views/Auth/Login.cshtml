@model BfiBaseTemplate.Repo.Entities.Request.AuthenticationEntities

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="card bg-authentication rounded-0 mb-0">
    <div class="row m-0">
        <div class="col-lg-6 d-lg-block d-none text-center align-self-center px-1 py-0">
            <img src="~/images/pages/login.png" alt="branding logo">
        </div>
        <div class="col-lg-6 col-12 p-0">
            <div class="card rounded-0 mb-0 p-2">
                <div class="card-header pb-1">
                    <div class="card-title">
                        <h4 class="mb-0">Login</h4>
                    </div>
                </div>
                <p class="px-2">Welcome back, please login to your account.</p>
                <div class="card-content">
                    <div class="card-body pt-1">
                        <form asp-action="login" asp-controller="auth" method="post" asp-antiforgery="true">
                            <input asp-for="ReturnUrl" type="hidden" />
                            <fieldset class="form-label-group form-group position-relative has-icon-left">
                                <input type="text" class="form-control" asp-for="Email" placeholder="Username" autocomplete="off" value="1911NC0000">
                                <div class="form-control-position">
                                    <i class="feather icon-user"></i>
                                </div>
                                <label for="user-name">Username</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </fieldset>

                            <fieldset class="form-label-group position-relative has-icon-left">
                                <input type="password" class="form-control" asp-for="Password" placeholder="Password" autocomplete="off" value="123456">
                                <div class="form-control-position">
                                    <i class="feather icon-lock"></i>
                                </div>
                                <label for="user-password">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </fieldset>
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div class="text-left">
                                </div>
                                <div class="text-right"><a asp-action="index" asp-controller="forgot" class="card-link">Lupa Password?</a></div>
                            </div>
                            <a asp-controller="register" asp-action="index" class="btn btn-outline-primary float-left btn-inline">Daftar Sekarang</a>
                            <button type="submit" class="btn btn-primary float-right btn-inline">Login</button>
                        </form>
                    </div>
                </div>
                <div class="login-footer">
                    
                </div>
            </div>
        </div>
    </div>
</div>
