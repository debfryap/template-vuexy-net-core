<section id="outline-button">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Border</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <p>Use a class <code>.btn-outline-{color}</code> to quickly create a outline button.</p>
                                <!-- Outline buttons -->
                                <button type="button" class="btn btn-outline-primary mr-1 mb-1 waves-effect waves-light">Primary</button>
                                <button type="button" class="btn btn-outline-success mr-1 mb-1 waves-effect waves-light">Success</button>
                                <button type="button" class="btn btn-outline-info mr-1 mb-1 waves-effect waves-light">Info</button>
                                <button type="button" class="btn btn-outline-warning mr-1 mb-1 waves-effect waves-light">Warning</button>
                                <button type="button" class="btn btn-outline-danger mr-1 mb-1 waves-effect waves-light">Danger</button>
                                <button type="button" class="btn btn-outline-light mr-1 mb-1 waves-effect waves-light">Light</button>
                                <button type="button" class="btn btn-outline-dark mr-1 mb-1 waves-effect waves-light">Dark</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>